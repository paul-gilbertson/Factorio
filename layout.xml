<?xml version="1.0" encoding="utf-8"?>
<layout>
<grid>
    <row weight="6">
		<touch id="touch"
			ontap="tap" 
			ontouchdelta="delta"
			color="transparent"
			text="Touch!" />
	  </row>
	  <row weight="wrap">
		<button text="C" ontap="ctrltoggle" weight="2" color="green" id="ctrlbtn" />
		<button text="L" ondown="clickstart" onup="clickend" onhold="clickhold" weight="5" id="leftclickbtn" />
		<button text="R" ondown="rclickstart" onup="rclickend" weight="5" />
		<button text="S" ontap="shifttoggle" weight="2" color="green" id="shiftbtn" />
	  </row>

	  <row weight="1">
        <button icon="rotateright" ontap="rotate" color="blue"/>
		<button image="Backpack.png" scale="fit" ontap="inventory" color="blue" />
		<button image="Research.png" scale="fit" ontap="research" color="blue" />
	  </row>

	  <row weight="1">
        <button icon="zoomout" ontap="tbdown" color="purple" />
		<button icon="zoomin" ontap="tbup" color="purple" />
		<button text="M" ondown="mclickstart" onup="mclickend" />
		<button icon="rwd" ontap="menu" color="black" />
	  </row>
	  <row weight="1">
		<button icon="arrowup" ondown="rundown" onup="runup" color="orange" />
	  </row>
	  <row weight="1">
		<button icon="arrowleft" ondown="leftdown" onup="leftup" color="orange" />
		<button icon="arrowdown" ondown="reversedown" onup="reverseup" color="orange" />
		<button icon="arrowright" ondown="rightdown" onup="rightup" color="orange" />
	  </row>
	  </grid>
</layout>